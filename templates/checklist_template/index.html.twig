{% extends 'layouts/with_header.html.twig' %}

{% block title %}ChecklistTemplate index{% endblock %}

{% block content %}
    <div class="container mx-auto py-8">
        <div class="flex justify-between items-center mb-8">
            <h1 class="text-3xl font-bold">Checklist Templates</h1>
            <a href="{{ path('app_checklist_template_new') }}" class="btn btn-primary">Create new</a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for checklist_template in checklist_templates %}
                <div class="card bg-base-100 shadow-lg border hover:shadow-md transition-shadow">
                    <div class="card-body">
                        <div class="flex justify-between items-start">
                            <h2 class="text-2xl font-bold">{{ checklist_template.title }}</h2>
                            <span class="badge badge-ghost">#{{ checklist_template.id }}</span>
                        </div>
                        
                        <p class="text-sm opacity-70 mt-2">{{ checklist_template.description }}</p>
                        
                        <div class="card-actions justify-end mt-6">
                            <a href="{{ path('app_checklist_template_show', {'id': checklist_template.id}) }}" class="btn btn-ghost btn-sm">
                                <svg xmlns="http://www.w3.org/2000/svg" class="size-4 me-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                </svg>
                                View
                            </a>
                            <a href="{{ path('app_checklist_template_edit', {'id': checklist_template.id}) }}" class="btn btn-outline btn-sm">
                                <svg xmlns="http://www.w3.org/2000/svg" class="size-4 me-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                </svg>
                                Edit
                            </a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-span-full text-center py-8">
                    <div class="max-w-md mx-auto">
                        <svg xmlns="http://www.w3.org/2000/svg" class="size-12 mx-auto text-base-content/30" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                        <p class="mt-4 text-base-content/60">No checklist templates found</p>
                        <a href="{{ path('app_checklist_template_new') }}" class="btn btn-primary mt-4">Create your first template</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
