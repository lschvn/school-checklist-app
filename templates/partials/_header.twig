<div class="bg-base-100 border-b border-base-200">
  <div class="container mx-auto">
    <div class="navbar px-0 min-h-14">
      <!-- Logo et navigation mobile -->
      <div class="navbar-start">
        <div class="dropdown lg:hidden">
          <label tabindex="0" class="btn btn-ghost btn-sm px-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h8m-8 6h16" />
            </svg>
          </label>
          <ul tabindex="0" class="dropdown-content menu menu-sm z-[100] mt-2 p-2 shadow-lg bg-base-100 rounded-box w-52 border border-base-200">
            <li><a href="{{ path('app_checklist_template_index') }}" class="font-medium">Templates</a></li>
            <li><a href="#" class="font-medium">Mes Checklists</a></li>
          </ul>
        </div>
        <a href="/" class="flex items-center gap-2">
          <span class="text-primary font-bold text-lg">Checklist</span>
          <span class="text-accent font-bold text-lg">App</span>
        </a>
      </div>
      
      <!-- Navigation - Desktop -->
      <div class="navbar-center hidden lg:flex">
        <ul class="menu menu-horizontal gap-1">
          <li>
            <a href="{{ path('app_checklist_template_index') }}" class="font-medium">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" />
                <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd" />
              </svg>
              Templates
            </a>
          </li>
          <li>
            <a href="#" class="font-medium">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" />
                <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm9 4a1 1 0 100 2h-3a1 1 0 100-2h3zm0 4a1 1 0 100 2h-3a1 1 0 100-2h3zm-6-3a1 1 0 00-2 0v.01a1 1 0 102 0V10zm1 0a1 1 0 100 2h.01a1 1 0 100-2H8zm-3 5a1 1 0 00-2 0v.01a1 1 0 102 0V15zm1 0a1 1 0 100 2h.01a1 1 0 100-2H7z" clip-rule="evenodd" />
              </svg>
              Mes Checklists
            </a>
          </li>
        </ul>
      </div>
      
      <!-- User menu / Login buttons -->
      <div class="navbar-end">
        {% if app.user %}
        <div class="dropdown dropdown-end">
          <label tabindex="0" class="btn btn-ghost btn-circle avatar bg-primary/10 hover:bg-primary/20 border-none flex items-center justify-center">
            <div class="w-10 h-10 rounded-full flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
            </div>
          </label>
          <ul tabindex="0" class="dropdown-content menu menu-sm z-[100] mt-3 p-2 shadow-lg bg-base-100 rounded-box w-52 border border-base-200">
            <li class="menu-title px-3 pt-1 pb-2">
              <span class="text-xs opacity-60">Connecté en tant que</span>
              <span class="font-semibold text-sm">{{ app.user.userIdentifier }}</span>
            </li>
            <li><a href="#" class="active:bg-primary active:text-primary-content">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
              </svg>
              Mon Profil
            </a></li>
            <li><a href="{{ path('app_logout') }}" class="text-error hover:bg-error hover:text-error-content">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M3 3a1 1 0 00-1 1v12a1 1 0 001 1h12a1 1 0 001-1V7.414l-2-2L11.414 3H3zm6.293 2.293a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 01-1.414-1.414L10.586 9H7a1 1 0 010-2h3.586L9.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
              Se déconnecter
            </a></li>
          </ul>
        </div>
        {% else %}
        <div class="flex gap-2 items-center">
          <a href="{{ path('app_login') }}" class="btn btn-ghost btn-sm">Connexion</a>
          <a href="{{ path('app_register') }}" class="btn btn-primary btn-sm">Inscription</a>
        </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>
